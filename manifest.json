{
  "manifest_version": 2,
  "name": "Vica Mode",
  "description": "This extension Vica's you, you love it",
  "version": "1.0",
  "browser_action": {
      "default_icon": "128.png",
      "default_title": "Vica Mode",
      "default_popup": "popup.html"
  },
  "content_scripts": [
      {
          "matches": [
              "<all_urls>"
          ],
          "js": [
              "content.js"
          ],
          "run_at": "document_end"
      }
  ]
}